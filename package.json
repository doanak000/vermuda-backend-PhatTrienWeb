{
  "name": "nagoya-api",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "main": "dist/index.js",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:debug": "nest start --watch",
    "start:stag": "pm2 restart vermuda-new",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "typeorm": "ts-node -r tsconfig-paths/register ./node_modules/typeorm/cli.js --config ./src/ormconfig.ts",
    "migration": "yarn typeorm migration:run",
    "migration:create": "yarn typeorm migration:create -n",
    "migration:generate": "yarn typeorm migration:generate -n",
    "schema:sync": "yarn typeorm migration:run && yarn typeorm schema:sync"
  },
  "dependencies": {
    "@nestjs-modules/mailer": "^1.5.1",
    "@nestjs/common": "^7.0.0",
    "@nestjs/config": "^0.5.0",
    "@nestjs/core": "^7.0.0",
    "@nestjs/graphql": "^9.1.2",
    "@nestjs/jwt": "^7.0.0",
    "@nestjs/passport": "^7.0.0",
    "@nestjs/platform-express": "^7.0.0",
    "@nestjs/typeorm": "^8.0.2",
    "@types/node": "14.14.25",
    "apollo-server-express": "^2.14.3",
    "aws-lambda": "^1.0.6",
    "aws-sdk": "^2.715.0",
    "aws-serverless-express": "^3.4.0",
    "class-transformer": "^0.2.3",
    "class-validator": "^0.12.2",
    "express": "^4.17.1",
    "express-rate-limit": "^5.1.3",
    "firebase-admin": "^9.6.0",
    "firebase-functions": "^3.13.2",
    "firebase-tools": "^9.9.0",
    "fs": "^0.0.1-security",
    "graphql": "14.6.0",
    "graphql-tools": "^6.0.9",
    "http": "^0.0.1-security",
    "https": "^1.0.0",
    "lodash": "^4.17.20",
    "moment": "^2.27.0",
    "moment-timezone": "^0.5.33",
    "mysql2": "^2.2.5",
    "nestjs": "^0.0.1",
    "nodemailer": "^6.4.10",
    "passport": "^0.4.1",
    "passport-jwt": "^4.0.0",
    "passport-local": "^1.0.0",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "rxjs": "^6.5.4",
    "shortid": "^2.2.16",
    "twilio": "^3.48.2",
    "typeorm": "^0.2.29",
    "uuid": "^8.1.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^11.0.0",
    "@commitlint/config-conventional": "^11.0.0",
    "@nestjs/cli": "^7.0.0",
    "@nestjs/schematics": "^7.0.0",
    "@nestjs/testing": "^7.0.0",
    "@types/aws-lambda": "^8.10.76",
    "@types/aws-serverless-express": "^3.3.3",
    "@types/express": "^4.17.3",
    "@types/graphql": "^14.5.0",
    "@types/jest": "25.1.4",
    "@types/lodash": "^4.14.165",
    "@types/passport-local": "^1.0.33",
    "@types/shortid": "^0.0.29",
    "@types/supertest": "^2.0.8",
    "@typescript-eslint/eslint-plugin": "^2.23.0",
    "@typescript-eslint/parser": "^2.23.0",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.10.0",
    "eslint-plugin-import": "^2.20.1",
    "husky": "^4.3.6",
    "jest": "^25.1.0",
    "lint-staged": "^10.5.3",
    "prettier": "^1.19.1",
    "serverless-offline": "^6.9.0",
    "start-server-webpack-plugin": "^2.2.5",
    "supertest": "^4.0.2",
    "ts-jest": "25.2.1",
    "ts-loader": "^6.2.1",
    "ts-node": "^8.6.2",
    "tsconfig-paths": "^3.9.0",
    "typescript": "^3.7.4",
    "webpack-node-externals": "^1.7.2"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  },
  "lint-staged": {
    "*.ts": [
      "yarn lint",
      "git add ."
    ]
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "lint-staged"
    }
  }
}
